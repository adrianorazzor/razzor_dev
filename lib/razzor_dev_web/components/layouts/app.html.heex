<header role="banner">
  <nav class="flex items-center justify-between p-6 lg:px-8 absolute inset-x-0 top-0 z-50" aria-label="Main navigation">
    <!-- Left Section: Name -->
    <div class="flex-1">
      <a href="/" aria-label="Home">
        <h1 class="text-lg sm:text-xl md:text-2xl font-bold">RAZZOR DEV</h1>
