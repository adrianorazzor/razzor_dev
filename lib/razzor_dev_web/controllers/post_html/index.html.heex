<.header>
  Listing Posts
  <:actions>
    <.link href={~p"/blog/new"}>
      <.button>New Post</.button>
    </.link>
  </:actions>
</.header>

<.table id="posts" rows={@posts} row_click={&JS.navigate(~p"/blog/#{&1}")}>
  <:col :let={post} label="Title">
    <%= post.title %>
  </:col>
  <:col :let={post} label="Content">
    <%= post.content %>
  </:col>
  <:col :let={post} label="Slug">
    <%= post.slug %>
  </:col>
  <:col :let={post} label="Published">
    <%= post.published %>
  </:col>
  <:col :let={post} label="Published at">
    <%= post.published_at %>
  </:col>
  <:action :let={post}>
    <div class="sr-only">
      <.link navigate={~p"/blog/#{post}"}>Show</.link>
    </div>
    <.link navigate={~p"/blog/#{post}/edit"}>Edit</.link>
  </:action>
  <:action :let={post}>
    <.link href={~p"/blog/#{post}"} method="delete" data-confirm="Are you sure?">
      Delete
    </.link>
  </:action>
</.table>