<.simple_form :let={f} for={@changeset} action={@action} class="space-y-6">
  <.error :if={@changeset.action}>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
      Oops, something went wrong! Please check the errors below.
    </div>
  </.error>

  <.input field={f[:title]} type="text" label="Title"
    class="w-full bg-light dark:bg-dark text-dark dark:text-light border-details" />
  <.input field={f[:author]} type="text" label="Author"
    class="w-full bg-light dark:bg-dark text-dark dark:text-light border-details" />
  <div class="form-group">
    <label for={f[:content].id} class="form-label">Content</label>
    <textarea id={f[:content].id} name={f[:content].name} value={f[:content].value} rows="10"
      class="w-full bg-light dark:bg-dark text-dark dark:text-light border-details"></textarea>
    <%= for err <- f[:content].errors do %>
      <div class="form-error">
        <%= Phoenix.HTML.Form.normalize_message(err) %>
      </div>
      <% end %>
  </div>

  <.input field={f[:tags]} type="text" label="Tags (comma-separated)"
    class="w-full bg-light dark:bg-dark text-dark dark:text-light border-details" />
  <.input field={f[:published]} type="checkbox" label="Published"
    class="w-full bg-light dark:bg-dark text-dark dark:text-light border-details" />
  <.input field={f[:slug]} type="text" label="Slug"
    class="w-full bg-light dark:bg-dark text-dark dark:text-light border-details" />

  <.input field={f[:published_at]} type="datetime-local" label="Published at"
    class="w-full bg-light dark:bg-dark text-dark dark:text-light border-details" />

  <:actions>
  </:actions>
</.simple_form>